<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/pagebkg"
    tools:context=".BuyPassActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BUY PASS"
                android:textAlignment="center"
                android:textColor="@color/lavender"
                android:textSize="36sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/rollnum_pass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:drawablePadding="8dp"
                android:hint="Roll Number"
                android:padding="8dp"
                android:textColor="@color/black" />


            <EditText
                android:id="@+id/section_pass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:drawablePadding="8dp"
                android:hint="Section"
                android:padding="8dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/phone_pass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:drawablePadding="8dp"
                android:hint="Phone Number"
                android:padding="8dp"
                android:textColor="@color/black" />


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/route_pass"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:drawablePadding="8dp"
                android:textColor="@color/black"
                android:entries="@array/routes"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/duration_pass"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:inputType="text"
                android:drawablePadding="8dp"
                android:textColor="@color/black"
                android:entries="@array/duration"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Total"
                android:text="Total Amount:"
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/lavender"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/buy_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/lavender"
                android:text="BUY PASS"
                android:textSize="18sp"
                app:cornerRadius="20dp" />



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>